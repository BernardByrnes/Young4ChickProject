extends ../layouts/main

block content
  h1 Register
  if error
    p.error= error
  form(method='POST', action='/auth/register')
    div
      label(for='name') Name
      input#name(name='name', type='text', required)
    div
      label(for='email') Email
      input#email(name='email', type='email', required)
    div
      label(for='password') Password
      input#password(name='password', type='password', required)
    div
      label(for='age') Age
      input#age(name='age', type='number', min='18', required)
    div
      label(for='gender') Gender
      select#gender(name='gender', required)
        option(value='') Select Gender
        option(value='male') Male
        option(value='female') Female
        option(value='other') Other
    div
      label(for='nin') NIN
      input#nin(name='nin', type='text', required)
    div
      label(for='recommenderName') Recommender Name
      input#recommenderName(name='recommenderName', type='text', required)
    div
      label(for='recommenderNIN') Recommender NIN
      input#recommenderNIN(name='recommenderNIN', type='text', required)
    div
      label(for='contact') Contact
      input#contact(name='contact', type='text', required)
    div
      label(for='role') Role
      select#role(name='role', required)
        option(value='') Select Role
        option(value='customer') Customer
        option(value='rep') Sales Representative
        option(value='manager') Manager
    button(type='submit') Register
  p
    a(href='/auth/login', class='button') Already have an account? Login