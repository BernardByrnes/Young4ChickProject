extends ../layouts/main

block content
  h1 Approve Requests
  if requests.length
    table
      thead
        tr
          th Type
          th Breed
          th Quantity
          th Farmer Type
          th Status
          th Action
      tbody
        each request in requests
          tr
            td= request.type
            td= request.breed
            td= request.quantity
            td= request.farmerType
            td= request.status
            td
              form(method='POST', action='/manager/approve')
                input(type='hidden', name='requestId', value=request._id)
                button(type='submit', name='action', value='approve') Approve
                button(type='submit', name='action', value='reject') Reject
  else
    p No pending requests.
  p
    a(href='/manager/dashboard', class='button') Back to Dashboard