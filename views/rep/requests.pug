extends ../layouts/main

block content
  h1 Rep Requests
  if requests.length
    table
      thead
        tr
          th Type
          th Breed
          th Quantity
          th Farmer Type
          th Status
          th Created At
      tbody
        each request in requests
          tr
            td= request.type
            td= request.breed
            td= request.quantity
            td= request.farmerType
            td= request.status
            td= request.createdAt.toLocaleDateString()
  else
    p No requests found.
  p
    a(href='/rep/request', class='button') Record New Request
    a(href='/rep/dashboard', class='button') Back to Dashboard